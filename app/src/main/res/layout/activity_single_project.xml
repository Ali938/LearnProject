<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleProjectDetails">

    <TextView
        android:id="@+id/single_project_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProjectName"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toTopOf="@id/recyclerList_single_projects_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        android:padding="5dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerList_single_projects_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/single_project_name_id"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed">

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>