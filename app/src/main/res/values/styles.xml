<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme" >
        <item name="android:windowExitTransition">@transition/login_exit</item>
    </style>
    <style name="AppTheme.Main" parent="AppTheme" >
        <item name="android:windowExitTransition">@transition/menu_exit</item>
        <item name="android:windowAnimationStyle">@transition/menu_enter</item>
    </style>
    <style name="AppTheme.Profile" parent="AppTheme" >
        <item name="android:windowAnimationStyle">@transition/profile_enter</item>
        <item name="android:windowExitTransition">@null</item>
    </style>

</resources>
